{
  "name": "server-actions-wrapper",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**"
  ],
  "exports": {
    "./hooks": "./src/use-server-action.tsx",
    ".": "./src/index.ts"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.mts"
      ],
      "hooks": [
        "./dist/use-server-action.d.mts"
      ]
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint .",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "build": "tsup src/index.ts src/use-server-action.tsx --format cjs,esm --dts",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf .next"
  },
  "dependencies": {
    "react": "^18.3.1",
    "typescript": "latest",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "tsup": "^8.0.2"
  }
}
